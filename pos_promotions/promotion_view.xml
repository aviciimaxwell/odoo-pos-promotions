<?xml version="1.0"?>
<openerp>
  <data>
    <record id="view_form_pos_promotion" model="ir.ui.view">
      <field name="name">pos.promotion.form</field>
      <field name="model">pos.promotion</field>
      <field name="arch" type="xml">

        <form string="Promotion">
          <header>
            <!--<button string="Disable Rule" type="object" name="disable_user" attrs="{'invisible': [('active','=',True)]}"/>
            <button string="Enable Rule" type="object" name="enable_user" attrs="{'invisible': [('state','=',False)]}"/>
            <field name="active" widget="statusbar" clickable="True"/>-->
          </header>
          <sheet string="Promotion">
              <!-- Content goes here: -->
              <label name="name" string="Promotion Name" />
              <newline/>
            <h1>
               <field name="name" placeholder="Promotion Name" /> <!-- Username-->
            </h1>

            <group name="group_left">
                 <field name="label"/>
                  <field name="locations"/>
                  <field name="active"/>
                  <field name="date_start"/>
                  <field name="date_end"/>
                  <field name="coupon_code"/>
                  <field name="priority"/>
                  <!--<h3>Apply and exclude tagged products</h3>
                  <field name="tags_applied" options="{'no_create': True}" widget="many2many_tags" />
                  <field name="tags_excluded" options="{'no_create': True}" widget="many2many_tags" />-->
                  <field name="discount_type"/>
                  <field name="discount_step"/>
                  <field name="discount_amount"/>
                  <field name="max_qty"/>
                  <field name="stop_processing"/>
                  <field name="categories_applied" options="{'no_create': True}" widget="many2many_tags" />
                  <field name="categories_excluded" options="{'no_create': True}" widget="many2many_tags" />
                  <field name="products_applied" options="{'no_create': True}" widget="many2many_tags" />
                  <field name="products_excluded" options="{'no_create': True}" widget="many2many_tags" />
            </group>

            <notebook>
              <page string="Other Notes">
                <field name="notes" placeholder="Add additional internal notes..." />
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>

      <record model="ir.actions.act_window" id="action_list_promotions">
          <field name="name">Promotions</field>
          <field name="res_model">pos.promotion</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                  Create your first promotion rule.
              </p>
          </field>
      </record>
      <menuitem id="menu_promotions" parent="point_of_sale.menu_point_root" name="POS Promotions" sequence="10" action="action_list_promotions" />


  </data>
</openerp>